{
  "manifest_version": 3,
  "name": "IntelliWallet",
  "version": "1.0.0",
  "description": "Your intelligent multi-chain crypto wallet",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.alchemy.com/*",
    "https://*.etherscan.io/*",
    "https://*.polygonscan.com/*",
    "https://*.arbiscan.io/*",
    "https://*.optimistic.etherscan.io/*",
    "https://*.explorer.solana.com/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "IntelliWallet",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["*.js", "*.css", "*.png", "*.svg"],
      "matches": ["<all_urls>"]
    }
  ]
}